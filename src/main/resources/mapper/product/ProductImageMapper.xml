<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.crown.mapper.product.ProductImageMapper">

    <select id="getProductImagesById" parameterType="Integer" resultType="org.crown.model.product.dto.ProductImgDTO">
        select pi.img_id,i.img_url,i.type,pi.p_id from product_image pi
        inner join image i on i.id = pi.img_id
        where pi.p_id = #{pId}
    </select>
</mapper>
